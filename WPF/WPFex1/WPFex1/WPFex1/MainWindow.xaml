<Window x:Class="WPFex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Up left" Margin="0,0,70,0" Foreground="#FFCB1717" FontFamily="Agency FB" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left"/>
        <Button Foreground="Brown" Content="Down left" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Button Content="Down Right" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1" Foreground="Azure" Click="Button_Click"/>
        <Button Content="Down Right" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Foreground="DarkCyan" />


    </Grid>
</Window>
